<div id='title'>
  <h1 class="text-center">Playdates with Randy</h1>
    <div id="cat">
      <%= image_tag "cat.jpg" %>
    </div>
</div>

<hr>

<div class="col-xs-12">
  <% @plans.each do |plan| %>
    <div class="col-xs-6">
      <div class="plans">
        <p>
         Get the <b><%= plan.name %></b>for <b><%= plan.price %> </b>to hang with Randy for <b><%= plan.time %></b><br>
        </p>
      </div>
         <%= link_to "Subscribe", new_plan_charge_path(plan), class: "btn btn-danger button" %>
         <br>
    </div>
  <% end %>
</div>
